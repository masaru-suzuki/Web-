extends ../default/_default.pug

block variables
  include ../data/_data.pug
  - var isTop = true;
  - var page = "top";

block title
  title #{data.recruit.title}
block meta
  meta(name='description' content!=`${data.recruit.description}`)
  meta(property='og:title' content!=`${data.recruit.title}`)
  meta(property='og:description' content!=`${data.recruit.description}`)
  meta(property='og:url' content=`${data.recruit.url}`)
  meta(property='og:image' content=`${data.recruit.image}`)

block link
  //- css
  link(rel='stylesheet' href='https://unpkg.com/swiper@7/swiper-bundle.min.css')
  link(rel='stylesheet' href='./css/common.min.css')
  link(rel='stylesheet' href='./css/top.min.css')

  //- js
  script(src="https://unpkg.com/swiper@7/swiper-bundle.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.5.9/lottie.min.js")
  script(src="/recruit/js/main.min.js" defer)
  script(src="/recruit/js/top.min.js" defer)

block header
  //- include ../common/_header.pug
block contents

block footer
  //- include ../common/_footer.pug
